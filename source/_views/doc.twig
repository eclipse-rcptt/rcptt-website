{% extends "base.twig" %}
{% block content_wrapper %}
<div class="row">
  <div class="col-sm-3">
    <div class="rcptt-sidebar">
      <ul class="nav">
	{% for doc in site.guide %}
	<li {% if doc.slug == page.slug %}class="active" {% endif %}><a href="{{site.url}}/documentation/{{doc.url}}">{{doc.name}}</a>
	  {% if doc.children %}
	  <ul class="nav">
	    {% for child_doc in doc.children %}
	    <li {% if child_doc.slug == page.slug %} class="active" {% endif %}>
	      <a href="{{site.url}}/documentation/{{child_doc.url}}">{{child_doc.name}}</a>
	    </li>
	    {% endfor %}
	  </ul>
	  {% endif %}
	</li>
	{% endfor %}
      </ul>
    </div>
  </div>
  <div class="col-sm-9">
    <h1>{{ page.title }}</h1>
    {% block content %}aaaa!{% endblock %}
  </div>
</div>
{% endblock %}
