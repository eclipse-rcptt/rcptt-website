---
use: ["posts"]
permalink: blog/atom.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title><![CDATA[RCP Testing Tool Blog]]></title>
    <link href="{{ site.url }}/atom.xml" rel="self"/>
    <link href="{{ site.url }}/"/>
    <updated>{{ (site.posts | first).date | date('c') }}</updated>
    <id>{{ site.url }}/blog</id>
    {% if site.author or site.email %}
        <author>
            {% if site.author %}<name><![CDATA[{{ site.author }}]]></name>{% endif %}
            {% if site.email %}<email><![CDATA[{{ site.email }}]]></email>{% endif %}
        </author>
    {% endif %}
    <generator uri="http://sculpin.io/">Sculpin</generator>
    {% for post in data.posts|slice(0, 10) %}
        <entry>
            <title type="html"><![CDATA[{{ post.title }}]]></title>
            <link href="{{ site.url }}{{ post.url }}"/>
            <updated>{{ post.date|date('c') }}</updated>
            <id>{{ site.url }}{{ post.url }}</id>
            <content type="html"><![CDATA[
	    {% set break_array = post.blocks.content|split('<!-- break -->', 2) %}

	    {{ break_array[0]|raw }}

	    {% if break_array|length > 1 %}
	    <p><a href="{{ site.url }}{{ post.url }}">
              Read more of this post
	    </a></p>
	    {% endif %}

	    ]]></content>
        </entry>
    {% endfor %}
</feed>
